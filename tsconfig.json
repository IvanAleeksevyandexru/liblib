{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@angular/*": [
        "./node_modules/@angular/*"
      ],
      "@ifc/plugin": [
        "src/assets/vendor/ifccommon-lib.js"
      ],
      "@ifc/common": [
        "src/assets/vendor/ifcplugin-lib.js"
      ],
      "@epgu/ui/components/*": [
        "projects/ui/components/*"
      ],
      "@epgu/ui/pipes/*": [
        "projects/ui/pipes/*"
      ],
      "@epgu/ui/directives/*": [
        "projects/ui/directives/*"
      ],
      "@epgu/ui/services/*": [
        "projects/ui/services/*"
      ],
      "@epgu/ui/models": [
        "projects/ui/models"
      ],
      "@epgu/ui/models/*": [
        "projects/ui/models/*"
      ],
      "@epgu/types": [
        "projects/types/src"
      ]
    },
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableIvy": false,
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "strictInjectionParameters": true,
    "enableResourceInlining": true
  },
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts"
  ]
}
